<state xmlns="http://xmlns.escenic.com/2013/content-state"
       xmlns:ui="http://xmlns.escenic.com/2008/interface-hints">
  <name>submitted-published</name>
  <actions>
    <action>published</action>
    <action>revert</action>
    <action>draft-published</action>
    <action>approved-published</action>
    <action>un-publish-keep</action>
    <action>un-publish-revert</action>
    <action>deleted</action>
  </actions>
  <choices>
    <name>default</name>
    <choice>
      <name>published</name>
      <action>published</action>
    </choice>
    <ui:separator/>
    <choice>
      <name>revert</name>
      <ui:expert/>
      <choices>
        <name>revert</name>
        <choice>
          <name>revert</name>
          <action>revert</action>
        </choice>
        <choice>
          <name>cancel</name>
        </choice>
      </choices>
    </choice>
    <ui:separator/>
    <choice>
      <name>draft-published</name>
      <action>draft-published</action>
    </choice>
    <choice>
      <name>approved-published</name>
      <action>approved-published</action>
    </choice>
    <ui:separator/>
    <choice>
      <name>un-publish</name>
      <choices>
        <name>un-publish-staged</name>
        <choice>
          <name>un-publish-keep</name>
          <action>un-publish-keep</action>
        </choice>
        <choice>
          <name>un-publish-revert</name>
          <action>un-publish-revert</action>
        </choice>
        <choice>
          <name>cancel</name>
        </choice>
      </choices>
    </choice>
    <choice>
      <name>deleted</name>
      <choices>
        <name>delete-staged</name>
        <choice>
          <name>deleted</name>
          <action>deleted</action>
        </choice>
        <choice>
          <name>cancel</name>
        </choice>
      </choices>
    </choice>
  </choices>
</state>
