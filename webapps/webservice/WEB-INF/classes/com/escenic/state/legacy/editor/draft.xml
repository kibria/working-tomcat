<state xmlns="http://xmlns.escenic.com/2013/content-state"
       xmlns:ui="http://xmlns.escenic.com/2008/interface-hints">
  <name>draft</name>
  <actions>
    <action>published</action>
    <action>draft</action>
    <action>submitted</action>
    <action>approved</action>
    <action>deleted</action>
  </actions>
  <choices>
    <name>default</name>
    <choice>
      <name>published</name>
      <action>published</action>
    </choice>
    <ui:separator/>
    <choice>
      <name>draft</name>
      <action>draft</action>
    </choice>
    <choice>
      <name>submitted</name>
      <action>submitted</action>
    </choice>
    <choice>
      <name>approved</name>
      <action>approved</action>
    </choice>
    <ui:separator/>
    <choice>
      <name>deleted</name>
      <action>deleted</action>
    </choice>
  </choices>
</state>
