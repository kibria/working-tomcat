<?xml version="1.0" encoding="ISO-8859-1"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.escenic.studio-webstart</groupId>
    <artifactId>studio-webstart</artifactId>
    <version>5.7.31.160659</version>
  </parent>
  <artifactId>studio-webstart-dist</artifactId>
  <name>Content Studio WebStart :: Distribution</name>
  <packaging>war</packaging>
  <description>
    Creates the distribution file.
  </description>

  <dependencies>
    <dependency>
      <groupId>com.escenic.common</groupId>
      <artifactId>common-nursery-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>com.escenic.common</groupId>
      <artifactId>common-nursery</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.escenic.engine</groupId>
      <artifactId>engine-servletsupport</artifactId>
    </dependency>
    <dependency>
      <groupId>com.escenic.studio-webstart</groupId>
      <artifactId>studio-webstart-engine</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.escenic.studio-webstart</groupId>
      <artifactId>studio-webstart-jnlp</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.teamdev.jniwrapper</groupId>
      <artifactId>comfyj</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.teamdev.jniwrapper</groupId>
      <artifactId>jniwrap</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.teamdev.jniwrapper</groupId>
      <artifactId>winpack</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-jdk14</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <id>webstart-unpack</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>com.escenic.studio-webstart</groupId>
                  <artifactId>studio-webstart-jnlp</artifactId>
                  <version>${project.version}</version>
                  <type>zip</type>
                  <outputDirectory>${project.build.directory}/${project.build.finalName}/studio/lib/</outputDirectory>
                  <excludes>studio-webstart-bootstrap*.jar,xalan*.jar.pack.gz,comfyj-*,jniwrap-*,winpack-*</excludes>
                  <includes>*.jar,*.jar.pack.gz</includes>
                </artifactItem>
                <artifactItem>
                  <groupId>com.escenic.studio-webstart</groupId>
                  <artifactId>studio-webstart-jnlp</artifactId>
                  <version>${project.version}</version>
                  <type>zip</type>
                  <outputDirectory>${project.build.directory}/${project.build.finalName}/studio/native/Windows/</outputDirectory>
                  <includes>comfyj-*,jniwrap-*,winpack-*</includes>
                </artifactItem>
                <artifactItem>
                  <groupId>com.escenic.studio-webstart</groupId>
                  <artifactId>studio-webstart-jnlp</artifactId>
                  <version>${project.version}</version>
                  <type>zip</type>
                  <outputDirectory>${project.build.directory}/${project.build.finalName}/studio/</outputDirectory>
                  <includes>**/studio-webstart-bootstrap*.jar</includes>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <id>webstart-unpack-splash-screen</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>com.escenic.studio</groupId>
                  <artifactId>studio-core</artifactId>
                  <version>${studio-version}</version>
                  <type>jar</type>
                  <outputDirectory>${project.build.directory}/studio/images/</outputDirectory>
                  <includes>com/escenic/studio/image/**</includes>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <webResources>
            <resource>
              <directory>${project.build.directory}/studio/images/com/escenic/studio/image</directory>
              <targetPath>images</targetPath>
            </resource>
          </webResources>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
